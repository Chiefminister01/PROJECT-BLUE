<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#A41A1A"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/rxdzye8zrub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F8F8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r8r0tiwdhfly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#EFEFEF"
                android:paddingVertical="8dp"
                android:paddingHorizontal="21dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rr7auy6doksl"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginBottom="103dp"
                android:background="#FAFAFA"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_1"
                    app:shapeAppearanceOverlay="@style/cr20" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="COURSE APPROVAL "
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>



                <ImageView
                    android:id="@+id/settingsIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FDFCFC">

    <LinearLayout
        android:id="@+id/studentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Student 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#EFEAEA"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Student Registration Number -->
            <TextView
                android:id="@+id/studentRegNo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reg No: 12345"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- Student Name -->
            <TextView
                android:id="@+id/studentName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: John Doe"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- Slot -->
            <TextView
                android:id="@+id/slot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot: Morning"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Approve and Reject Buttons -->
        </LinearLayout>

        <!-- Student 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Reject Button -->
            <Button
                android:id="@+id/rejectButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"

                android:padding="8dp"
                android:text="Reject"
                android:textColor="#ED1C0B" />

            <!-- Approve Button -->
            <Button
                android:id="@+id/approveButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="8dp"
                android:text="Approve"
                android:textColor="#10EB1A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E2E0E0"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Student Registration Number -->
            <TextView
                android:id="@+id/studentRegNo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reg No: 67890"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- Student Name -->
            <TextView
                android:id="@+id/studentName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Jane Smith"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- Slot -->
            <TextView
                android:id="@+id/slot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot: Afternoon"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Approve and Reject Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- Reject Button -->
                <Button
                    android:id="@+id/rejectButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textColor="#EF0404"

                    android:padding="8dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Approve Button -->
                <Button
                    android:id="@+id/approveButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:textColor="#01F00B"

                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

