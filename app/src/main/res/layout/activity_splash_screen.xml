<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="20dp">

    <!-- College Name -->
    <TextView
        android:id="@+id/collegeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VETRIVEL UNIVERSITY"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="395dp"
        android:layout_height="150dp"
        android:src="@drawable/logo" /> <!-- Replace with your logo drawable -->


    <!-- ARMS Portal Text -->
    <TextView
        android:id="@+id/armsPortalText"
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="ARMS Portal"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Student Button -->
        <Button
            android:id="@+id/studentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student"
            android:textSize="18sp"
            android:backgroundTint="@color/blue"/> <!-- Replace with your color -->


        <!-- Teacher Button -->
        <Button
            android:id="@+id/teacherButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher"
            android:textSize="18sp"
            android:backgroundTint="@color/green" />><!-- Replace with your color -->


        <!-- Administrator Button -->
        <Button
            android:id="@+id/adminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrator"
            android:textSize="18sp"
            android:backgroundTint="@color/red" /><!-- Replace with your color -->

    </LinearLayout>

</LinearLayout>