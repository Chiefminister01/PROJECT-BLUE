<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/rxdzye8zrub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F6F6F6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r8r0tiwdhfly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#EEEEEE"
                android:paddingVertical="8dp"
                android:paddingHorizontal="21dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rr7auy6doksl"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginBottom="103dp"
                android:background="#FFFFFF"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_1"
                    app:shapeAppearanceOverlay="@style/cr20" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="ABOUT US "
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/settingsIcon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/settingsIcon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/settingsIcon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <!-- Content Section -->
            <RelativeLayout
                android:id="@+id/r2delyqdwtd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="1dp"
                    android:orientation="vertical">

                    <!-- Mission and Vision Section -->
                    <LinearLayout
                        android:id="@+id/mission_vision_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/mission_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mission and Vision"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/mission_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To empower individuals and organizations through innovative solutions, fostering growth, and creating a positive impact in the world."
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Philosophy Section -->
                    <LinearLayout
                        android:id="@+id/philosophy_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/philosophy_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Philosophy"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/philosophy_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="We believe in the power of collaboration, innovation, and integrity to drive meaningful change and create a better future for all."
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Contact Info Section -->
                    <LinearLayout
                        android:id="@+id/contact_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/contact_info_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Info"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/contact_info_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMAIL : VETRIVELUNIVERSITYMGT@gmail.com.
PHONE: 8637691638"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Feedback Section -->
                    <LinearLayout
                        android:id="@+id/feedback_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/feedback_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feedback"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/feedback_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your feedback text goes here."
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- About the App Section -->
                    <LinearLayout
                        android:id="@+id/about_app_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/about_app_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About the App"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/about_app_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENQUIRY ABOUT APP : vetriunivsupport@gmail.com"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>